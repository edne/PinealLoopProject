      (color 1 1 1 1)
      (line-width 1)
      (turn-z 64)
      (turn-y 16)
      (rotate-y (-> (time (/ pi 4)) (% 2pi)))
      )

'(-@> (@ (-@> (cube 1)
              (rotate-x (rot)))
         (-@> (cube 1)
              (rotate-x (rot -1)))
         (-@> (cube 1)
              (rotate-y (rot)))
         (-@> (cube 1)
