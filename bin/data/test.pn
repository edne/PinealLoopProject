(alias bg       background)
(alias black-bg bg 0 0 0 1)

(def r (-> (time 8)
         (sin) (* 0.1) (+ 1.5)))

(value rot (% (time 4) 2pi))

(black-bg)

(on level-1
    (@ (background 1 1 1 0)
       (-@> (cube 1)
            (no-fill)
            (line-width 1)
            (color 0 1 1 1.0)
            (turn-x 6)
            (turn-y 3)
            (rotate-x (-> (time (/ pi 4)) (% 2pi)))
            )))


(-@> (polygon 3 0.5)
     (fill)
     (color 0 1 0)
     (line-width 2))

(at (beat 1 0.1)
    (-@> (polygon 3 0.25)
         (fill)
         (translate 0.5)
         (color 0 1 0 1)
         (turn-z 3)
         (line-width 4)))

;(at (beat 4 2) (level-1))

